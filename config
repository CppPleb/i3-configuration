bindsym $mod+Shift+plus exec amixer sset Master 1%+
bindsym $mod+XF86AudioRaiseVolume exec amixer sset Master 1%+

bindsym $mod+minus exec amixer sset Master 5%-
bindsym XF86AudioLowerVolume exec amixer sset Master 5%-
bindsym $mod+Shift+underscore exec amixer sset Master 1%-
bindsym $mod+XF86AudioLowerVolume exec amixer sset Master 1%-

bindsym $mod+Control+plus exec amixer sset Master toggle
bindsym $mod+Control+minus exec amixer sset Master toggle
bindsym XF86AudioMute exec amixer sset Master toggle

